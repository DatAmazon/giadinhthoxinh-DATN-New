
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/assets/styles/checkout.css" rel="stylesheet" />

<section class="h-100 gradient-custom" style="background-color: #8fc4b7">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h4 class="mb-0">Thông tin nhận hàng</h4>
                    </div>
                    <div class="card-body">

                        <div class="card-body p-4 p-md-5">
                            <form class="px-md-2">
                                <div class="form-outline mb-3 ">
                                    <input type="text" id="form3Example1q" class="form-control mx-auto width-input" placeholder="Email (tùy chọn)" />
                                    @*<label class="form-label" for="form3Example1q">Name</label>*@
                                </div>
                                <div class="form-outline mb-4 ">
                                    <input type="text" id="form3Example1q" class="form-control mx-auto width-input" placeholder="Họ tên" />
                                    @*<label class="form-label" for="form3Example1q">Name</label>*@
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" id="form3Example1q" class="form-control mx-auto width-input" placeholder="SĐT" />
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" id="form3Example1q" class="form-control mx-auto width-input" placeholder="Địa chỉ" />
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" id="form3Example1q" class="form-control mx-auto width-input" placeholder="Email" />
                                </div>
                                <div class="form-outline mb-4">
                                    <textarea rows="4" cols="50" id="form3Example1q" class="form-control mx-auto width-input" style="justify-content:center">Ghi chú (tùy chọn) </textarea>
                                </div>


                                @*<div class="d-flex" style="justify-content: space-evenly; width: 60%; margin: 0 auto">
                                        <a class="small text-primary" href="/user/login" style="text-decoration:none; margin-top: 12px">Về trang đăng nhập</a>
                                        <button type="submit" class="btn color-main btn-sm font-main">Đăng ký</button>
                                    </div>*@

                            </form>
                        </div>

                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body p-4 p-md-5">
                        <p style="margin:0;"><strong>Thanh toán</strong></p>
                        <hr class="mt-0 mb-3 custom-hr" />
                        <form class="checkout-method px-md-4 width-input mx-auto">
                            <div class="mx-auto width-input py-2">
                                <div class="align-center">
                                    <div>
                                        <input class="mt-3" type="radio" id="transfer" name="checkoutMethod" value="transfer">
                                        <label for="transfer">&nbsp;Chuyển khoản</label><br>
                                    </div>
                                    <div><i class="fa fa-money text-primary" aria-hidden="true"></i></div>
                                </div>

                                <hr class="my-0" />

                                <div class="mt-1 align-center">
                                    <div>
                                        <input class="mt-2" type="radio" id="cash" name="checkoutMethod" value="cash">
                                        <label for="cash">&nbsp;Thanh toán khi nhận hàng</label><br>
                                    </div>
                                    <div><i class="fa fa-money text-primary" aria-hidden="true"></i></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Tóm tắt đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Giá sản phẩm:
                                <span>500.000</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Giá ship:
                                <span>Free</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Tổng tiền</strong>
                                    <strong>
                                        @*<p class="mb-0">(bao gồm VAT)</p>*@
                                    </strong>
                                </div>
                                <span><strong>500.000</strong></span>
                            </li>
                        </ul>

                        <div class="align-center">
                            <p>
                                <a href="/cart/cart">
                                    <button type="button" class="btn color-main progress-return" style="border: none">
                                        Quay về giỏ hàng
                                    </button>
                                </a>
                            </p>
                            <p>
                                <a href="#">
                                    <button type="button" class="btn bg-primary progress-checkout" style="border: none">
                                        Thanh toán
                                    </button>
                                </a>
                            </p>
                        </div>



                        @*<button type="button" class="btn btn-primary btn-lg btn-block">
                            Thanh toán
                        </button>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




































